# Production Environment Variables
NODE_ENV=production
LOG_LEVEL=warn

# Database (Use connection pooling and SSL)
DATABASE_SSL=true
DATABASE_URL=postgresql://username:password@prod-db-host:5432/spendsmart

# Backend
PORT=3001
API_PREFIX=/api

# Security
JWT_SECRET=your-production-jwt-secret-must-be-very-secure
BCRYPT_ROUNDS=12

# External Services (Use production endpoints)
TINK_ENVIRONMENT=production
MOCK_EXTERNAL_APIS=false
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false

# Monitoring
SENTRY_DSN=your-production-sentry-dsn
LOGROCKET_APP_ID=your-production-logrocket-app-id

# Rate Limiting (More restrictive in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50 